      "source": [
        "# ---- Rule-Based Email Sorting AI ----\n",
        "\n",
        "def classify_email(text):\n",
        "    text = text.lower().strip()\n",
        "\n",
        "    # IMPORTANT emails\n",
        "    important_keywords = [\"urgent\", \"asap\", \"important\", \"immediately\", \"action required\"]\n",
        "    for word in important_keywords:\n",
        "        if word in text:\n",
        "            return \"Important\"\n",
        "\n",
        "    # PROMOTIONS\n",
        "    promo_keywords = [\"offer\", \"discount\", \"sale\", \"coupon\", \"buy now\", \"deal\"]\n",
        "    for word in promo_keywords:\n",
        "        if word in text:\n",
        "            return \"Promotions\"\n",
        "\n",
        "    # WORK\n",
        "    work_keywords = [\"meeting\", \"schedule\", \"deadline\", \"project\", \"update\", \"work\"]\n",
        "    for word in work_keywords:\n",
        "        if word in text:\n",
        "            return \"Work\"\n",
        "\n",
        "    # SPAM\n",
        "    spam_keywords = [\"win money\", \"lottery\", \"prize\", \"free gift\", \"click this link\"]\n",
        "    for word in spam_keywords:\n",
        "        if word in text:\n",
        "            return \"Spam\"\n",
        "\n",
        "    # FINANCE\n",
        "    finance_keywords = [\"invoice\", \"payment\", \"bill\", \"bank\", \"transaction\"]\n",
        "    for word in finance_keywords:\n",
        "        if word in text:\n",
        "            return \"Finance\"\n",
        "\n",
        "    # SOCIAL\n",
        "    social_keywords = [\"follow\", \"like\", \"comment\", \"tagged\"]\n",
        "    for word in social_keywords:\n",
        "        if word in text:\n",
        "            return \"Social\"\n",
        "\n",
        "    # SHOPPING\n",
        "    shopping_keywords = [\n",
        "        \"order\", \"delivery\", \"shipped\", \"refund\",\n",
        "        \"tracking\", \"cart\", \"payment received\", \"purchase\"\n",
        "    ]\n",
        "    for word in shopping_keywords:\n",
        "        if word in text:\n",
        "            return \"Shopping\"\n",
        "\n",
        "    # SUBSCRIPTION\n",
        "    subscription_keywords = [\n",
        "        \"renewal\", \"subscription\", \"membership\",\n",
        "        \"trial\", \"auto-renew\", \"plan update\", \"account notice\"\n",
        "    ]\n",
        "    for word in subscription_keywords:\n",
        "        if word in text:\n",
        "            return \"Subscription\"\n",
        "\n",
        "    # JOB / INTERVIEW\n",
        "    job_keywords = [\n",
        "        \"interview\", \"resume\", \"cv\", \"hiring\",\n",
        "        \"job offer\", \"internship\", \"application status\", \"selection\"\n",
        "    ]\n",
        "    for word in job_keywords:\n",
        "        if word in text:\n",
        "            return \"Job\"\n",
        "\n",
        "    # DEFAULT\n",
        "    return \"General\"\n",
        "\n",
        "\n",
        "# ---- User Input ----\n",
        "if __name__ == \"__main__\":\n",
        "    email_text = input(\"Enter your email message: \")\n",
        "    category = classify_email(email_text)\n",
        "    print(\"\\nEmail Category:\", category)\n"
      ],
